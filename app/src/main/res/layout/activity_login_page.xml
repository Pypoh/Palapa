<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pypoh.project.com.palapa.Auth.LoginPage"
    android:background="@drawable/login_background"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >


        <!-- TODO: Change color of logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="225dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/logo_black"


            />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            >

            <ImageView
                android:layout_width="40dp"

                android:layout_height="wrap_content"
                android:src="@drawable/ic_perm_identity_black_24dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_username"
                android:hint="Nama Pengguna"
                android:singleLine="true"
                android:fontFamily="@font/tw_cent_mt"
                android:gravity="center"
                android:textSize="20dp"
                android:backgroundTint="#ffffff"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_outline_black_24dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_password"
                android:hint="Kata Sandi"
                android:fontFamily="@font/tw_cent_mt"
                android:gravity="center"
                android:textSize="20dp"
                android:backgroundTint="#ffffff"
                android:inputType="textPassword"
                android:singleLine="true"
                />

        </LinearLayout>






        <TextView
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:id="@+id/lupa_password"
            android:layout_below="@id/login_password"
            android:text="Lupa Kata Sandi?"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/tw_cent_mt"
            android:textSize="16dp"


            />

        <Button
            android:id="@+id/masuk_btn"
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:layout_marginTop="25dp"
            android:text="Masuk"
            android:textSize="20dp"
            android:fontFamily="@font/tw_cent_mt"
            android:background="#393633"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="atau"
            android:textColor="#ffffff"
            android:fontFamily="@font/tw_cent_mt"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/daftar_btn"
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:text="Daftar"
            android:textSize="20dp"
            android:fontFamily="@font/tw_cent_mt"
            android:background="#34717D"
            android:textColor="#ffffff"
            />





    </LinearLayout>



</RelativeLayout>
